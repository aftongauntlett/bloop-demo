<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <title>{{ title or site.name }}</title>
    <style type="text/css">
      /* Minimal CSS for Netscape 4.0 compatibility */
      body { background: #000000; font-family: Verdana, Arial, sans-serif; font-size: 12px; }
    </style>
    <link rel="stylesheet" href="/styles/styles.css" type="text/css">
    <!-- Modern meta tags that Netscape 4.0 will ignore -->
    <meta name="description" content="{{ site.description }}">
    <meta name="keywords" content="computer museum, video games, retro computing, technology, Baltimore, Pittsburgh, vintage computers, electronics">
  </head>
  <body bgcolor="#000000">
    <!-- Skip link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Background pattern table for visual interest -->
    <table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#000000">
      <tr>
        <td align="center">
          
          <!-- Main content table -->
          <table width="760" cellpadding="0" cellspacing="0" border="2" align="center" bgcolor="#ffffff" style="margin-top: 10px; margin-bottom: 10px; border-color: #000066;" height="100%">
            <tr valign="top" height="100%">

              <!-- Sidebar Navigation -->
              <td width="250" bgcolor="#e0e0e0" style="border-right: 3px solid #000066; position: relative;" height="100%" valign="top">
                <div class="sidenav-top">
                  <img src="/images/bloop-logo.gif" alt="Bloop Museum Logo" class="logo" width="160" height="78" border="0">
                  <nav class="nav-links" role="navigation" aria-label="Main navigation">
                    {% for item in navigation %}
                    <a href="{{ item.href }}" class="{% if title == item.title %}nav-item-active{% else %}nav-item{% endif %}"{% if title == item.title %} aria-current="page"{% endif %}>{{ item.label }}</a>
                    {% endfor %}
                  </nav>
                </div>
                
                <!-- Sidebar Footer - positioned at bottom -->
                <div class="sidebar-footer-absolute">
                  <div class="sidebar-social">
                    <p class="sidebar-social-title">Follow Us:</p>
                    <a href="{{ site.social.facebook }}" target="_blank" class="sidebar-social-link">♦ Facebook</a>
                    <a href="{{ site.social.instagram }}" target="_blank" class="sidebar-social-link">● Instagram</a>
                    <a href="{{ site.social.patreon }}" target="_blank" class="sidebar-social-link">♥ Patreon</a>
                  </div>
                  
                  <div class="sidebar-support">
                    <a href="https://givebutter.com/bloopholiday" target="_blank" class="sidebar-support-button">★ Support Us</a>
                  </div>
                </div>
              </td>

              <!-- Main Content Area -->
              <td width="710" bgcolor="#ffffff" style="padding: 0;">
                <main id="main-content" class="page-container">
                  {{ content | safe }}
                </main>
              </td>

            </tr>
          </table>
          
        </td>
      </tr>
    </table>

    <!-- Footer -->
    <table width="760" cellpadding="10" cellspacing="0" border="2" align="center" bgcolor="#d0d0d0" style="margin-bottom: 10px; border-color: #000066;">
      <tr>
        <td class="footer-content">
          <hr size="1" class="footer-divider" width="90%">
          
          <!-- Footer Navigation -->
          <div style="margin-bottom: 10px;">
            {% for item in navigation %}
            <a href="{{ item.href }}" class="footer-link">{{ item.label }}</a>{% if not loop.last %} |{% endif %}
            {% endfor %}
          </div>
          
          &copy; 2025 {{ site.name }} | EIN {{ site.organization.ein }} | A {{ site.organization.type }}
          <br><br>
          <div style="font-size: 11px; color: #666666; font-style: italic; margin: 5px;">
            ♦ Technical Note: This site is optimized for Netscape 4.0/Pentium 90 compatibility and ProtoWeb.org vintage browser emulation.<br>
            Built with ♥ by <a href="https://aftongauntlett.com" target="_blank" style="color: #666666;">Afton Gauntlett</a>.
          </div>
        </td>
      </tr>
    </table>

  </body>
</html>